<% include ../partials/header %>
  <script>
    window.initMap = function() {};
  </script>

<div class="container" style="height: 100%;">
    <h1>Edit Profile</h1>
    <div class="row">
      
      <div class="col-md-3">
        <div class="thumbnail">
          <img src="<%= user.profilePic %>">
        </div>
      </div>
      <div class="col-md-9">
        <div style="width: 30%; margin: 0 60% 0 0;">
            <form id="profile-edit" action="/profile/<%= user._id %>?_method=PUT" method="POST">
                <div class="form-group">
                  <label>Name: </label>
                  <input class="form-control" type="text" name="updated[name]" value="<%= user.name %>">
                </div>
                <div class="form-group">
                  <label>Avatar url: </label>
                  <input class="form-control" type="text" name="updated[profilePic]" value="<%= user.profilePic %>">
                </div>
                <div class="form-group">
                  <label>Email: </label>
                  <input class="form-control" type="text" name="updated[email]" value="<%= user.email %>">
                  <p class="p-r">Make email public</p><input type="checkbox" name="check" id="test" value="unchecked" />
                </div>
                <div class="form-group">
                    <button id="profile-edit-submit" class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/profile/<%= user._id %>">Go back</a>
        </div>
      </div>  
    </div>
</div>

<% include ../partials/footer %>
