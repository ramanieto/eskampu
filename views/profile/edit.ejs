<% include ../partials/header %>

<script>
  window.initMap = function() {};
</script>

<div class="container" style="height: 100%;">
    <h1>Edit Profile</h1>
    <div class="row">
      
      <div class="col-md-3">
        <div class="thumbnail thumbnail-profile">
          <img src="<%= user.profilePic %>">
        </div>
      </div>
      <div class="col-md-9">
        <div>
            <form id="profile-edit" action="/profile/<%= user._id %>?_method=PUT" method="POST">
                <div class="form-group">
                  <!--<label>Name: </label>-->
                  <input class="form-control" type="text" name="updated[name]" value="<%= user.name %>" placeholder="Name">
                </div>
                <div class="form-group">
                  <!--<label>Avatar url: </label>-->
                  <input class="form-control" type="text" name="updated[profilePic]" value="<%= user.profilePic %>" placeholder="Profile Pic URL">
                </div>
                <div class="form-group">
                  <!--<label>Email: </label>-->
                  <input class="form-control" type="text" name="updated[email]" value="<%= user.email %>" placeholder="Email">
                  <!--<p class="p-r">Make email public</p><input type="checkbox" name="check" id="test" value="unchecked" />-->
                </div>
                <div class="form-group">
                    <button id="profile-edit-submit" class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/profile/<%= user._id %>">Go back</a>
        </div>
      </div>  
    </div>
</div>

<% include ../partials/footer %>
